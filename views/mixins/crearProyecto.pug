mixin crearProyecto(proyecto = {})
    pre #{vardump(proyecto)}
    form(action=`/nuevo_proyecto/${proyecto.id || ''}` class="agregar-proyecto" method="POST")
        .campo
            label(for="nombre") Nombre del proyecto:
            input(value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder="Nombre del proyecto")
        .campo-enviar
            input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}` class="boton")